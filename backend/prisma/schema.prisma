// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id              String           @id @default(uuid())
  role            String           @default("RESIDENT")
  provider        String           @default("LOCAL") // 'KAKAO', 'GOOGLE', 'NAVER', 'LOCAL'
  providerId      String?          @unique
  email           String?          @unique
  name            String
  phone           String?          @unique
  profileImage    String?
  status          String           @default("ACTIVE")
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  villasManaged   Villa[]          @relation("VillaAdmin")
  residentRecords ResidentRecord[]
  invoicePayments InvoicePayment[]
  posts           Post[]
  comments        Comment[]
  vehicles        Vehicle[]
  buildingEvents  BuildingEvent[]
}

model Villa {
  id              Int                 @id @default(autoincrement())
  name            String
  address         String
  totalUnits      Int
  adminId         String
  admin           User                @relation("VillaAdmin", fields: [adminId], references: [id])
  accountNumber   String
  bankName        String
  inviteCode      String?             @unique
  autoBillingDay  Int?
  createdAt       DateTime            @default(now())
  residents       ResidentRecord[]
  transactions    LedgerTransaction[]
  invoices        Invoice[]
  posts           Post[]
  vehicles        Vehicle[]
  buildingEvents  BuildingEvent[]
}

enum InvoiceType {
  FIXED
  VARIABLE
}

model Invoice {
  id                String           @id @default(uuid())
  billingMonth      String
  memo              String?
  type              InvoiceType      @default(FIXED)
  totalAmount       Int
  amountPerResident Int
  items             Json?
  createdAt         DateTime         @default(now())
  villaId           Int
  villa             Villa            @relation(fields: [villaId], references: [id])
  payments          InvoicePayment[]
}

model InvoicePayment {
  id         String   @id @default(uuid())
  invoiceId  String
  invoice    Invoice  @relation(fields: [invoiceId], references: [id])
  residentId String
  resident   User     @relation(fields: [residentId], references: [id])
  amount     Int
  status     String   @default("PENDING")
  createdAt  DateTime @default(now())
}

model ResidentRecord {
  id         Int      @id @default(autoincrement())
  villaId    Int
  villa      Villa    @relation(fields: [villaId], references: [id])
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  roomNumber String
  joinedAt   DateTime @default(now())
}

model LedgerTransaction {
  id          Int      @id @default(autoincrement())
  villaId     Int
  villa       Villa    @relation(fields: [villaId], references: [id])
  date        DateTime @default(now())
  description String
  amount      Int
  type        String   // 'INCOME' or 'EXPENSE'
  hasReceipt  Boolean  @default(false)
  receiptUrl  String?
}

model Post {
  id        String    @id @default(uuid())
  title     String
  content   String
  isNotice  Boolean   @default(false)
  authorId  String
  villaId   Int
  createdAt DateTime  @default(now())
  author    User      @relation(fields: [authorId], references: [id])
  villa     Villa     @relation(fields: [villaId], references: [id])
  comments  Comment[]
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  authorId  String
  postId    String
  createdAt DateTime @default(now())
  author    User     @relation(fields: [authorId], references: [id])
  post      Post     @relation(fields: [postId], references: [id])
}

model Vehicle {
  id                String    @id @default(uuid())
  plateNumber       String
  modelName         String?
  isVisitor         Boolean   @default(false)
  expectedDeparture String?
  ownerId           String
  villaId           Int
  createdAt         DateTime  @default(now())
  owner             User      @relation(fields: [ownerId], references: [id])
  villa             Villa     @relation(fields: [villaId], references: [id])
}

model BuildingEvent {
  id             String   @id @default(uuid())
  title          String
  description    String?
  category       String
  eventDate      String
  contractorName String?
  contactNumber  String?
  attachmentUrl  String?
  villaId        Int
  villa          Villa    @relation(fields: [villaId], references: [id])
  creatorId      String
  creator        User     @relation(fields: [creatorId], references: [id])
  createdAt      DateTime @default(now())
}
